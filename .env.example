# ===== PostgreSQL (wiki-db) =====
POSTGRES_DB=olala
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_PORT=5432

# ===== Backend =====
BACKEND_PORT=8080
CORS_ORIGINS=http://localhost:5175,http://127.0.0.1:5175

# DB connection consumed by backend/settings
DB_HOST=wiki-db
DB_PORT=5432
DB_NAME=olala
DB_USER=postgres
DB_PASSWORD=postgres
DATABASE_URL=

# ===== LLM / Embedding =====
OLLAMA_URL=http://ollama:11434
OLLAMA_TIMEOUT=120
EMBED_MODEL=nomic-embed-text
EMBED_DIM=768
WIKI_EMBEDDINGS_READY=false

# Stage model settings (default: ollama)
SLM1_BASE_URL=http://ollama:11434/v1
SLM1_API_KEY=ollama
SLM1_MODEL=exaone3.5:7.8b
SLM1_TIMEOUT_SECONDS=180
SLM1_MAX_TOKENS=512
SLM2_BASE_URL=http://ollama:11434/v1
SLM2_API_KEY=ollama
SLM2_MODEL=exaone3.5:7.8b
SLM2_TIMEOUT_SECONDS=180
SLM2_MAX_TOKENS=768
# Stage9 Judge는 외부 LLM API 사용을 권장합니다.
# OpenAI 예시:
JUDGE_BASE_URL=https://api.openai.com/v1
JUDGE_API_KEY=
JUDGE_MODEL=gpt-4.1
JUDGE_TIMEOUT_SECONDS=180
JUDGE_MAX_TOKENS=768
# Perplexity 예시:
# JUDGE_BASE_URL=https://api.perplexity.ai
# JUDGE_MODEL=sonar

# Optional external APIs
NAVER_CLIENT_ID=
NAVER_CLIENT_SECRET=

# ===== Runtime =====
LOG_LEVEL=INFO
STRICT_PIPELINE=false
